<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SWAPO"
            android:gravity="center"
            android:textSize="@dimen/swapo_text_size"/>

        <Button
            android:id="@+id/btn_create_new"
            android:layout_width="@dimen/front_btn_width"
            android:layout_height="@dimen/front_btn_height"
            android:text="Create new" />

        <Button
            android:id="@+id/btn_use_existing"
            android:layout_width="@dimen/front_btn_width"
            android:layout_height="@dimen/front_btn_height"
            android:text="Use existing" />

        <Button
            android:id="@+id/btn_send_to_friend"
            android:layout_width="@dimen/front_btn_width"
            android:layout_height="@dimen/front_btn_height"
            android:text="Send to friend" />
    </LinearLayout>
</FrameLayout>